<Application x:Class="ComponentsDataBase.Application"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ComponentsDataBase">
    <Application.Resources>
        <!--Globally accessable style resources which can be altered from one file, saves doing it in the each of the controls
         or windows! -->
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/MainWindowResources.xaml"></ResourceDictionary>
                <ResourceDictionary Source="Resources/TopMenuResources.xaml"></ResourceDictionary>
                <ResourceDictionary Source="Resources/StatusBarResources.xaml"></ResourceDictionary>
                <ResourceDictionary Source="Resources/LeftAndRightListBoxResources.xaml"></ResourceDictionary>
                <ResourceDictionary Source="Resources/ButtonsResources.xaml"></ResourceDictionary>
                <ResourceDictionary Source="Resources/TextBoxResources.xaml"></ResourceDictionary>
                <ResourceDictionary Source="Resources/TextBlockResources.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
