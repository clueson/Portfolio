<UserControl x:Class="ComponentsDataBase.Views.ViewStatusBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ComponentsDataBase.Views"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d">
    <!-- status bar design-->
    <StatusBar x:Name="sbarMainBlue" Style="{DynamicResource sbarMainBlue}" >
        <TextBlock x:Name="tbxStatus" FontSize="14" Text="{Binding Statusbartext, UpdateSourceTrigger=PropertyChanged}"></TextBlock>
    </StatusBar>
</UserControl>
