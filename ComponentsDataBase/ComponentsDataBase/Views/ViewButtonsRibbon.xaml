                <i:EventTrigger EventName="MouseEnter">
                    <prism:InvokeCommandAction Command="{Binding mousenterCommand1}"></prism:InvokeCommandAction>
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Button>
        <Button x:Name="btnMouser" Style="{DynamicResource btnRound}" Content="Mouser" Tag="launches search within Mouser" >
